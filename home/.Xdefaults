XTerm*font:			6x10
XTerm*font1:			6x13

!! (this fixes it!)
XTerm*boldFont:			6x10

!! use fonts from xft
!XTerm*faceName:			DejaVu Sans Mono:minspace=true
!XTerm*faceSize:			10

!XTerm*wideChars:		false
!XTerm*boldMode:			false
!XTerm*boldColors:		false
!XTerm*colorBDMode:		false

!XTerm*veryBoldFont:		true
!XTerm*colorAttrMode:		true
XTerm*boldColors:		true
!XTerm*veryBoldColors:		4

!XTerm*boldMode:			false
XTerm*colorBDMode:		true
XTerm*colorBD:			white

!! brighten up the dark blue a bit
!*VT100.color4:			#3366ff

!! Terminology default color scheme:
*VT100.color1:		#cc3333
*VT100.color2:		#33cc33
*VT100.color3:		#cc8833
*VT100.color4:		#3333cc
*VT100.color5:		#cc33cc
*VT100.color6:		#33cccc
*VT100.color7:		#cccccc
*VT100.color8:		#666666
*VT100.color9:		#ff6666
*VT100.color10:		#66ff66
*VT100.color11:		#ffff66
*VT100.color12:		#6666ff
*VT100.color13:		#ff66ff
*VT100.color14:		#66ffff
*VT100.color15:		#ffffff

!! characters
!! (fixes not being able to backspace)
#XTerm*ttyModes:			erase ^h
*VT100.Translations: #override \
              <Key>BackSpace:	string(0x7F)\n\
              <Key>Delete:	string("\033[3~")\n\
              <Key>Home:	string("\033[1~")\n\
              <Key>End:		string("\033[4~")
XTerm*ttyModes:			erase ^?

!! special features

! shift-click opens highlighted text in browser
*VT100.Translations: #override \
		Shift <Btn1Up>: exec-formatted("google-chrome '%t'", PRIMARY)

