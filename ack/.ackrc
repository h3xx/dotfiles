--color-filename=bold yellow
--color-match=bold red
--color-lineno=bold blue

# ignore git merge temps
--ignore-file=match:/\.orig$/
--ignore-file=match:/_(BACKUP|BASE|LOCAL|REMOTE)_.*$/

# ignore SCSS cache files
--ignore-file=match:/\.scssc$/
# ignore SCSS map files
--ignore-file=match:/\.css\.map$/
