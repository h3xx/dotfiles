# .bashrc-prompt

## prompt
#PS1='\u@\h:\w\$ ' # factory default
## define colors
declare -A COLORS
COLORS['BLACK']='\e[30m'
COLORS['RED']='\e[31m'
COLORS['GREEN']='\e[32m'
COLORS['YELLOW']='\e[33m'
COLORS['BLUE']='\e[34m'
COLORS['MAGENTA']='\e[35m'
COLORS['CYAN']='\e[36m'
COLORS['WHITE']='\e[37m'
#COLORS['BRIGHT']='\e[01m'
#COLORS['NORMAL']='\e[0m'
#COLORS['BLINK']='\e[05m'
#COLORS['REVERSE']='\e[07m'

FRAME_COLOR='\e[01;30m'

# BASE_COLOR=(user root)
case "$HOSTNAME" in
	'necronomicon.slackware')
		BASE_COLOR=('RED'	'BLUE')
		;;
	'delicious.slackware')
		BASE_COLOR=('GREEN'	'CYAN')
		;;
	'shell.sf.net')
		BASE_COLOR=('GREEN'	'YELLOW')
		;;

	# default
	*)
		BASE_COLOR=('MAGENTA'	'CYAN')
		;;
esac

# select appropriate index for color (user=0; root=1)
[[ "$UID" -ne 0 ]] ; BASE_COLOR="${COLORS[${BASE_COLOR[$?]}]}"

# hint: 01;30m = bright black, 0;37m = normal white, 0;37 = white, 0m = normal
#PS1='\['"$FRAME_COLOR"'\]=[\l \['"$BASE_COLOR"'\]\u\[\e[0;37m\]@\['"$BASE_COLOR"'\]\h\[\e[37m\] \w \['"$FRAME_COLOR"'\]]=\[\e[37m\] \$\[\e[0m\] '

test -f /usr/doc/git-2.5.1/contrib/completion/git-prompt.sh && . "$_"

# hint: \e)0 sets G1 to special characters, \x0e puts terminal into G1 mode, \x0f puts terminal into normal mode
gps1='$(__git_ps1 '\''\e[38;5;202m:%s'\'')'
err='$(err="$?"; [[ "$err" -eq 0 ]] || echo -e '\''\e[0;33m'\''" [$err]")'

PS1='\[\e)0'"$FRAME_COLOR"''$'\x0e''\]lqqu\l \['$'\x0f'"$BASE_COLOR"'\]\u\[\e[0;37m\]@\['"$BASE_COLOR"'\]\h \['"$FRAME_COLOR"$'\x0e''\]tq\`'"$err"'\n\['"$FRAME_COLOR"''$'\x0e''\]mq[ \['$'\x0f''\e[0m\]\w'"$gps1"' \['"$FRAME_COLOR"'\]]= \[\e[01;37m\]\$\[\e[0m\] '

# prepend error string checking, as any prior command will overwrite $?
#PROMPT_COMMAND='(err="$?"; [[ "$err" -eq 0 ]] || echo -e '\''\e[0;33m'\''"[$err]")'"${PROMPT_COMMAND:+ ; $PROMPT_COMMAND}"

# clean up
unset \
	COLORS \
	BASE_COLOR \
	FRAME_COLOR \
	gps1 \
	err

# April Fools' Day prank
if [[ "$(date +%m%d)" == '0401' ]]; then
	PROMPT_COMMAND="${PROMPT_COMMAND:+$PROMPT_COMMAND ; }"'(if [[ $RANDOM -le 8000 ]]; then printf "\0337\033[%d;%dH\033[4%dm \033[m\0338" $((RANDOM%LINES+1)) $((RANDOM%COLUMNS+1)) $((RANDOM%8)); fi)'
	# technicolor prompt variant
	#PROMPT_COMMAND+=' ; (if [[ $RANDOM -le 8000 ]]; then printf "\033[4%dm" $((RANDOM%8)); fi)'
fi
