# .bash_profile-environment

if [[ -e ~/bin ]]; then
	PATH=~/bin:$PATH
fi

# Add thousands-separator (locale-specific) to 'ls' output
LS_OPTIONS="${LS_OPTIONS:+$LS_OPTIONS }--block-size='1"

# Standard editor, pager
export PAGER='less' MANPAGER='less' EDITOR='vim'
alias vi='$EDITOR'

# Disable gvfs mounts
export GVFS_DISABLE_FUSE=1
