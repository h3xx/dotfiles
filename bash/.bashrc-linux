	no_empty_cmd_completion \
	cdspell \
	checkhash \
	checkwinsize \
	histappend \
	histreedit \
	extglob \
	globstar

shopt -u \
	sourcepath

# only verify ! event substitutions if we're root
if [[ "$UID" -eq 0 ]]; then
	shopt -s histverify
fi

# use C-s to search forward through history (do not block output)
stty stop ''

