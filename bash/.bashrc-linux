	startx='exec startx' \
	g='gvim' \
	xo='xdg-open'

## directories
# NOTE: `autocd' shell option may be a better option than the ..* aliases
alias \
	..='cd .. && pwd && ls -A' \
	...='cd ../.. && pwd && ls -A' \
	....='cd ../../.. && pwd && ls -A' \
	.....='cd ../../../.. && pwd && ls -A' \
	......='cd ../../../../.. && pwd && ls -A' \
	.......='cd ../../../../../.. && pwd && ls -A' \
	........='cd ../../../../../../.. && pwd && ls -A' \
	-='cd - && ls -A' \
	++='pushd' \
	--='popd || popd -0'

## data sinks and dump files
n='/dev/null'
z='/dev/zero'
g="$HOME/.garbage.out"

## misc bash shortcuts
alias \
	k='kill -9' \
	ka='killall -v' \
	stopall='ka -s STOP' \
	startall='ka -s CONT' \
	j='jobs' \
	esu='exec su -' \
	rmr='rm -rf' \
	rma='findf1 -regextype posix-egrep \( -regex '\''.*/(.*~|#.*#|\.#.*)'\'' -o \( -regex '\''.*/\.(.*\.)?sw[op]'\'' ! -exec fuser -s {} \; \) \) -print -delete' \
	rmp='rm -v -- "$_~"' \
	fol='test -d "$_" && cd "$_" || cd "$(dirname -- "$_")"' \
	pfol='test -d "$_" && pushd "$_" || pushd "$(dirname -- "$_")"' \
	rmdirempty='findd -empty -print -delete' \
	rmdirempty1='findd1 -empty -print -delete' \
	pidof='/sbin/pidof'

