#!/bin/bash
# vi: et sts=4 sw=4 ts=4

smartquote() {
    local ARG=$1
    if [[ $ARG = *[^:@,./%^_=+a-zA-Z0-9-]* ]]; then
        ARG=\'${ARG//\'/\'\\\'\'}\'
    fi
    printf '%s\n' "$ARG"
}

ARGS=()
for ARG; do
    ARGS+=("$(smartquote "$ARG")")
done

VIM_ARGS=(
    # Open vim with `:grep' results
    -c "grep ${ARGS[*]}"
    -c 'cw'
)

exec vim \
    "${VIM_ARGS[@]}"
