#!/bin/bash
# vi: sts=4 sw=4 ts=4 et

YTDL_ARGS=()

# Download archive
if [[ -z $DOWNLOAD_ARCHIVE ]]; then
    DOWNLOAD_ARCHIVE=.youtube-dl-archive
fi
if [[ -f $DOWNLOAD_ARCHIVE ]]; then
    YTDL_ARGS+=(--download-archive "$DOWNLOAD_ARCHIVE")
fi

if type aria2c &>/dev/null; then
    YTDL_ARGS+=(
        --external-downloader aria2c
        --external-downloader-args '--max-connection-per-server=10 --force-save=false --summary-interval=0'
    )
fi

# XXX Unicode
# Work around not being able to encode UTF-8 filenames from the web into
# non-UTF-8 locales.
#
# Ideally, this should just be handled in youtube-dl; it should either apply a
# filter to strip incompatible endpoints from the output (ala `iconv -f utf8 -t
# latin1//TRANSLIT'), or should refrain from translating them altogether.
#
# Setting the locale here causes the translation to be UTF-8 -> UTF-8.
export LANG=en_US.utf8

next_bin() (
    # Find path to wrapped program
    BINNAME=${0##*/}
    while read -r BIN; do
        if [[ ! $BIN -ef $0 ]]; then
            printf '%s\n' \
                "$BIN"
            return 0
        fi
    done < <(type -aP -- "$BINNAME")
    printf 'Wrapped program not found in PATH: %s\n' \
        "$BINNAME" \
        >&2
    return 127
)

REALBIN=$(next_bin) || exit

exec "$REALBIN" \
    "${YTDL_ARGS[@]}" \
    "$@"
